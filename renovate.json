{
  "extends": [
    "group:babelMonorepo",
    "group:commitlintMonorepo",
    "group:docusaurusMonorepo",
    "group:angularMonorepo",
    "group:angular-cliMonorepo",
    "group:angularmaterialMonorepo",
    ":prHourlyLimit2",
    "workarounds:all"
  ],
  "dependencyDashboard": false,
  "timezone": "UTC",
  "rangeStrategy": "bump",
  "separateMajorMinor": true,
  "prConcurrentLimit": 2,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "build(deps):",
  "postUpdateOptions": ["yarnDedupeHighest"],
  "ignoreDeps": [
    "@mdx-js/react",
    "@types/react",
    "execa",
    "chalk",
    "react",
    "react-dom"
  ],
  "packageRules": [
    {
      "matchPaths": ["examples/example-app-v15/package.json"],
      "excludePackagePatterns": [
        "^angular",
        "^@angular",
        "typescript",
        "zone.js"
      ],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "matchPaths": ["examples/example-app-v17/package.json"],
      "excludePackagePatterns": [
        "^angular",
        "^@angular",
        "typescript"
      ],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "matchPackagePatterns": ["jest"],
      "excludePackageNames": ["eslint-plugin-jest"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Jest packages"
    },
    {
      "extends": ["packages:eslint"],
      "excludePackageNames": ["eslint-plugin-prettier", "eslint-config-prettier"],
      "groupName": "ESLint packages"
    },
    {
      "matchPackagePatterns": ["prettier"],
      "groupName": "Prettier packages"
    },
    {
      "matchFiles": ["package.json"],
      "matchDepTypes": ["dependencies", "optionalDependencies"],
      "rangeStrategy": "in-range-only"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    },
    {
      "matchPackagePatterns": [
        "esbuild"
      ],
      "enabled": false
    }
  ]
}
